
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Dodaj regiju</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form action="/Region/Dodaj" method="post" id="forma">
            <div class="modal-body">

                Naziv regije <input name="description" id="description" /> <br /><div></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                <input type="submit" class="btn btn-primary" value="Sačuvaj" id="submit">
            </div>
        </form>
    </div>
</div>

<style>
    .error {
        color: darkred;
        display: block;
    }
</style>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#forma").validate({
                rules: {
                    "nazivRegije": {
                        required: true,
                        lettersonly: true
                    }
                },
                messages: {
                    "nazivRegije": {
                        required: 'Obavezno polje',
                        lettersonly: 'Unesite naziv regije'
                    }
                }
            });
        });


        $("#submit").click(function () {
            if ($("#forma").valid())
                return true;
        });
    </script>
}