@model CityVM
@{
    var regije = (List<SelectListItem>)ViewData["regije"];
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Dodaj opštinu</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form asp-action="Dodaj" method="post" id="forma">
            <div class="modal-body">
                <input asp-for="CityID" style="display:none" />
                <div class="form-group">
                    <label>Naziv opštine</label>
                    <input asp-for="Description" class="form-control" name="Description" id="Opis" />
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label>Regije</label>
                    <select asp-for="RegionID" asp-items="regije" class="form-control">
                        <option disabled>(Odaberite regiju)</option>
                    </select>
                    <span asp-validation-for="RegionID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Poštanski broj</label>
                    <input asp-for="ZipCode" class="form-control" name="ZipCode" id="postanskiBroj" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                    <input type="submit" class="btn btn-primary" value="Sačuvaj" id="submit">
                </div>
            </div>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

</div>

<style>
    .error {
        color: darkred;
        display: block;
    }
</style>

@section Scripts {
    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
    <script>

        $(document).ready(function () {
            $("#forma").validate({
                rules: {
                    "Opis": {
                        required: true,
                        lettersonly: true
                    },
                    "postanskiBroj": {
                        required: true,
                        minlength: 3
                    }
                },
                messages: {
                    "Opis": {
                        required: 'Obavezno polje',
                        lettersonly: 'Unesite naziv regije'
                    },
                    "postanskiBroj": {
                        required: 'Obavezno polje',
                        minlength: 'Neispravan unos'
                    }
                }
            });
        });

        $("#submit").click(function () {
            if ($("#forma").valid())
                return true;
        });
    </script>
}